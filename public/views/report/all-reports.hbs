{{>header}}
<div class="pb-5">
    {{#each reports}}
    <div class="w-full lg:w-1/3 md:w-1/2 lg:flex mt-6 mx-auto bg-gray-200">
        <div class="flex flex-col justify-between leading-normal p-4">
            <div class="mb-8">
                <div class="text-gray-900 font-bold text-xl mb-2">{{this.title}}</div>
                <p class="text-gray-700 text-base">{{summary this.body}}</p>
            </div>
            <div class="flex items-center">
                <div class="text-sm">
                    <p class="text-gray-900 leading-none">By: {{formatAuthor this.author}}</p>
                    <p class="text-gray-600">{{this.updated_at}}</p>
                    <a href="/reports/{{this.id}}"
                        class="inline-block align-baseline font-bold text-lg border-l border-r border-t border-b rounded text-gray-500 hover:text-blue-800">View</a>

                    {{#if this.completed}}
                    <span
                        class="text-bold inline-block align-baseline font-bold text-lg border-l border-r border-t border-b rounded text-gray-500">Completed</span>
                    {{else}}
                    <span
                        class="text-bold inline-block align-baseline font-bold text-lg border-l border-r border-t border-b rounded text-red-400">Not
                        completed</span>
                    {{/if}}
                </div>
            </div>
        </div>
    </div>
    {{/each}}
</div>
{{>footer}}