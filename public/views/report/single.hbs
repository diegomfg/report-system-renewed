{{>header}}
<div class="bg-white p-4 flex flex-wrap flex-col justify-between leading-normal">
    <table class="table-fixed w-full md:1/2 lg:w-1/3 mx-auto p-4">
        <thead>
            <tr>
                <th class="font-mono bold text-lg underline">Author</th>
                <th class="font-mono bold text-lg underline">Category</th>
                <th class="font-mono bold text-lg underline">Updated at</th>
                <th class="font-mono bold text-lg underline">Completed</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td class="font-bold text-center p-4 mx-2 border-b">{{formatAuthor report.author}}</td>
                <td class="font-bold text-center p-4 mx-2 border-b">{{report.category}}</td>
                <td class="font-bold text-center p-4 mx-2 border-b">{{formatDate report.updated_at}}</td>
                <td class="font-bold text-center p-4 mx-2 border-b">{{report.completed}}</td>
            </tr>
        </tbody>
    </table>
    <div class="w-full lg:w-1/3 max-w-1/2 min-w-xs mx-auto px-4">
        {{!-- @todo Style this page. Create a sidebar for the details and a content block for the content of the report
        --}}
        <h2 class="font-mono bold text-xl underline">Title</h2>
        <h3>{{report.title}}</h3>
        <h2 class="font-mono bold text-xl underline"> Description</h2>
        <article class="prose lg:prose-xl">
            {{ report.body }}
        </article>
        {{#if (isAuthor user report)}}
        <a href="/reports/delete/{{report.id}}"
            class="bg-blue-500 hover:bg-blue-700 text-white p-2 font-bold border border-blue-700 rounded inline-block mt-3">Delete</a>
        <a href="/reports/update/{{report.id}}"
            class="bg-blue-500 hover:bg-blue-700 text-white p-2 font-bold border border-blue-700 rounded inline-block mt-3">Update</a>
        {{#if report.completed}}
        {{else}}
        <a href="/reports/complete/{{report.id}}"
            class="bg-green-500 hover:bg-green-700 text-white p-2 font-bold border border-blue-700 rounded inline-block mt-3">Mark
            Complete</a>
        {{/if}}
        {{/if}}
    </div>
</div>
{{>footer}}